*nat
:PREROUTING ACCEPT [0:0]
:INPUT ACCEPT [0:0]
:OUTPUT ACCEPT [0:0]
:POSTROUTING ACCEPT [0:0]

## containers routing
{% for c in containers %}

# {{ c.name }} container
-A POSTROUTING -s 172.{{ 16 + loop.index0 }}.0.2/30 -o eth0 -j MASQUERADE
-A PREROUTING -i eth0 -p tcp --dport {{ 8022 + loop.index0 }} -j DNAT --to-destination 172.{{ 16 + loop.index0 }}.0.2:22
{% if c.name == 'development' %}
-A PREROUTING -i eth0 -p tcp --dport 8080  -j DNAT --to-destination 172.{{ 16 + loop.index0 }}.0.2:80
{% elif c.name == 'production' %}
-A PREROUTING -i eth0 -p tcp --dport 80 -j DNAT --to-destination 172.{{ 16 + loop.index0 }}.0.2:80
{% elif c.name == 'etl_development' or c.name == 'etl_production' %}
-A PREROUTING -i eth0 -p tcp --dport 8444 -j DNAT --to-destination 172.{{ 16 + loop.index0 }}.0.2:8444
-A PREROUTING -i eth0 -p tcp --dport {{ 8200 + loop.index0 }} -j DNAT --to-destination 172.{{ 16 + loop.index0 }}.0.2:2000
{% endif %}
{% endfor %}
COMMIT

*filter
:INPUT DROP [0:0]
:FORWARD DROP [0:0]
:OUTPUT ACCEPT [0:0]
:TCP - [0:0]
:UDP - [0:0]
:lxc_forwards - [0:0]
:br_outbound - [0:0]

## log and drop
:logdrop - [0:0]
-A logdrop -m limit --limit 5/m --limit-burst 10 -j LOG --log-prefix "iptables deny: " --log-level 7
-A logdrop -j DROP

## loopback
-A INPUT -i lo -j ACCEPT
-A INPUT ! -i lo -d 127.0.0.0/8 -j REJECT

## sshguard
:sshguard - [0:0]
-A sshguard -m recent --name sshbf --rttl --update --rsource --hitcount 3 --seconds 10 -j logdrop
-A sshguard -m recent --name sshbf --rttl --update --rsource --hitcount 4 --seconds 1800 -j logdrop
-A sshguard -m recent --name sshbf --set -j ACCEPT

## bridge forward outbound
{% for c in containers %}
-A br_outbound -i br{{ loop.index0 }} -j ACCEPT
{% endfor %}

## route lxc inbound
{% for c in containers %}
### {{ c.name }}
-A lxc_forwards -d 172.{{ 16 + loop.index0 }}.0.2 -p tcp -m tcp --dport {{ 8022 + loop.index0 }} -m conntrack --ctstate NEW -j sshguard
{% if c.name == 'development' %}
-A lxc_forwards -d 172.{{ 16 + loop.index0 }}.0.2 -p tcp -m tcp --dport 8080 -m conntrack --ctstate NEW -j ACCEPT
{% elif c.name == 'production' %}
-A lxc_forwards -d 172.{{ 16 + loop.index0 }}.0.2 -p tcp -m tcp --dport 80 -m conntrack --ctstate NEW -j ACCEPT
{% elif c.name == 'etl_development' or c.name == 'etl_production' %}
-A lxc_forwards -d 172.{{ 16 + loop.index0 }}.0.2 -p tcp -m tcp --dport 8444 -m conntrack --ctstate NEW -j ACCEPT
-A lxc_forwards -d 172.{{ 16 + loop.index0 }}.0.2 -p tcp -m tcp --dport {{ 8200 + loop.index0 }} -m conntrack --ctstate NEW -j sshguard
{% endif %}
{% endfor %}

## lxc forwards
-A FORWARD -m conntrack --ctstate RELATED,ESTABLISHED -j ACCEPT
-A FORWARD -j lxc_forwards
-A FORWARD -j br_outbound
-A FORWARD -j REJECT --reject-with icmp-host-unreach

## host 
-A INPUT -p tcp -m tcp --dport 22 -m conntrack --ctstate NEW -j sshguard
-A INPUT -m conntrack --ctstate RELATED,ESTABLISHED -j ACCEPT
-A INPUT -m conntrack --ctstate INVALID -j DROP

# allow ping
-A INPUT -p icmp -m icmp --icmp-type 8 -m conntrack --ctstate NEW -j ACCEPT

# icmp control
-A INPUT -p udp -m conntrack --ctstate NEW -j UDP
-A INPUT -p tcp --syn -m conntrack --ctstate NEW -j TCP
-A INPUT -p udp -j REJECT --reject-with icmp-port-unreachable
-A INPUT -p tcp -j REJECT --reject-with tcp-rst

# reject all others
-A INPUT -j REJECT --reject-with icmp-proto-unreachable
COMMIT
