*filter
:INPUT DROP [0:0]
:FORWARD DROP [0:0]
:OUTPUT ACCEPT [0:0]
:TCP - [0:0]
:UDP - [0:0]

## log and drop
:logdrop - [0:0]
-A logdrop -m limit --limit 5/m --limit-burst 10 -j LOG --log-prefix "iptables deny: " --log-level 7
-A logdrop -j DROP

## loopback
-A INPUT -i lo -j ACCEPT
-A INPUT ! -i lo -d 127.0.0.0/8 -j REJECT

## sshguard
:sshguard - [0:0]
-A sshguard -m recent --name sshbf --rttl --update --rsource --hitcount 3 --seconds 10 -j logdrop
-A sshguard -m recent --name sshbf --rttl --update --rsource --hitcount 4 --seconds 180 -j logdrop
-A sshguard -m recent --name sshbf --set -j ACCEPT

## host ssh 
-A INPUT -p tcp -m tcp --dport 22 -m conntrack --ctstate NEW -j sshguard

## cassandra
-A INPUT -p tcp -m tcp --dport 7000 -j ACCEPT
-A INPUT -p tcp -m tcp --dport 7001 -j ACCEPT
-A INPUT -p tcp -m tcp --dport 7199 -j ACCEPT
-A INPUT -p tcp -m tcp --dport 9042 -j ACCEPT
-A INPUT -p tcp -m tcp --dport 9160 -j ACCEPT

## Zookeeper
-A INPUT -p tcp -m tcp --dport 2181 -j ACCEPT
-A INPUT -p tcp -m tcp --dport 2888 -j ACCEPT
-A INPUT -p tcp -m tcp --dport 3888 -j ACCEPT

## Storm
-A INPUT -p tcp -m tcp --dport 3772 -j ACCEPT
-A INPUT -p tcp -m tcp --dport 3773 -j ACCEPT
-A INPUT -p tcp -m tcp --dport 6627 -j ACCEPT
-A INPUT -p tcp -m tcp --dport 6700 -j ACCEPT
-A INPUT -p tcp -m tcp --dport 6701 -j ACCEPT
-A INPUT -p tcp -m tcp --dport 6702 -j ACCEPT
-A INPUT -p tcp -m tcp --dport 6703 -j ACCEPT
-A INPUT -p tcp -m tcp --dport 8000 -j ACCEPT
-A INPUT -p tcp -m tcp --dport 8081 -j ACCEPT

-A INPUT -m conntrack --ctstate RELATED,ESTABLISHED -j ACCEPT
-A INPUT -m conntrack --ctstate INVALID -j DROP


# allow ping
-A INPUT -p icmp -m icmp --icmp-type 8 -m conntrack --ctstate NEW -j ACCEPT

#icmp control
-A INPUT -p udp -m conntrack --ctstate NEW -j UDP
-A INPUT -p tcp --syn -m conntrack --ctstate NEW -j TCP
-A INPUT -p udp -j REJECT --reject-with icmp-port-unreachable
-A INPUT -p tcp -j REJECT --reject-with tcp-rst

#reject all others, maybe drop?
-A INPUT -j REJECT --reject-with icmp-proto-unreachable
COMMIT
